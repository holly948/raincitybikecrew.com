<!doctype html>
<head>
  <meta charset="utf-8" />
  <link rel="dns-prefetch" href="https://identity.netlify.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>{{ renderData.title or title or metadata.title }}</title>
  <meta property="og:title" content="{{ renderData.title or title or metadata.title }}" />
  <meta property="description" content="{{ description or renderData.description or metadata.description }}" />
  <meta property="og:description" content="{{ description or renderData.description or metadata.description }}" />
  <meta property="keywords" content="{{ keywords or renderData.keywords or metadata.keywords }}" />

  <meta property="og:site_name" content="{{ title }}" />
  <meta property="og:type" content="website" />
  <meta key="twitter:card" property="twitter:card" content="summary_large_image" />
  <meta key="og:image" property="og:image" content="{{ metadata.url }}static/img/cover.jpg" />
  <meta key="og:image:alt" property="og:image:alt" content="A pattern of motorcycle-related shapes, and a blue circular logo showing a raincloud and a motorcycle's outline." />
  <meta key="twitter:image:alt" property="twitter:image:alt" content="A pattern of motorcycle-related shapes, and a blue circular logo showing a raincloud and a motorcycle's outline." />

  <link rel="icon" type="image/png" sizes="192x192" href="/static/img/logo-circle-2-new-192.png" />
  <link rel="apple-touch-icon" href="/static/img/logo-circle-2-new-192.png" />

  <script async src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  {% set css %}
    {% include "assets/css/inline.css" %}
  {% endset %}
  <style>{{ css | cssmin | safe }}</style>

  <link href="https://fonts.googleapis.com/css2?family=Noticia+Text:wght@400;700&family=Open+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
</head>
